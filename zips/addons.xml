<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.filimo" name="Filimo" version="1.0" provider-name="Ali Fallah">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="Main.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <description lang="en">Filimo Plugin</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="repository.filimokodi" name="Filimo Kodi Repo" version="1.0" provider-name="Ali Fallah">
    <extension point="xbmc.addon.repository" name="Filimo Kodi Repo">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/fallaha/repository.filimokodi/kodi19/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/fallaha/repository.filimokodi/kodi19/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/fallaha/repository.filimokodi/kodi19/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Filimo Kodi</summary>
        <description>Filimo Kodi and Dependency Repository For Kodi 19</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
</addons>
